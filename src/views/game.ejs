<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Game</title>

        <link rel="stylesheet" href="../styles/style.css" />
    </head>
    <body>
        <%- include("partials/header", { path: "../" }) %>

        <main>
            <%- include("partials/add", { path: "game", name: "Game"}) %>

            <h2>Games</h2>
            <ul class="list-of-things">
                <% for (let i = 0; i < games.length; i++) { %>
                    <li><a href="/game/<%= games[i].id %>"><%= games[i].game_name %></a></li>
                <% } %>
            </ul>
        </main>
    </body>
</html>

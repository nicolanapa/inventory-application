<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Publisher <%= publisher.id %></title>

        <link rel="stylesheet" href="../../styles/style.css" />
        <link rel="stylesheet" href="../../styles/singleView.css">
    </head>
    <body>
        <%- include("../partials/header", { path: "../" }) %>

        <main>
            <div>
                <h2><%= publisher.publisher_name %></h2>

                <h3>Published these Games</h3>
                <ul>
                    <% for (let i = 0; i < games.length; i++) { %>
                        <li><a href="/game/<%= games[i].game_id %>"><%= games[i].game_name %></a></li>
                    <% } %>
                </ul>

                <div>
                    <%- include("../partials/update", { path: "publisher", id: publisher.id, name: publisher.publisher_name }) %>
                    <%- include("../partials/deleteForm", { path: "publisher", id: publisher.id, name: publisher.publisher_name }) %>
                </div>
            </div>
            <!-- Publisher not found Handling -->
        </main>
    </body>
</html>

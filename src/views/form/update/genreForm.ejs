<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Genre Form</title>
        
        <link rel="stylesheet" href="../../styles/style.css">
        <link rel="stylesheet" href="../../styles/form.css">
    </head>
    <body>
        <%- include("../../partials/header", { path: "../../" }) %>

        <% if (locals.errors) { %>
            <ul>
                <% locals.errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        <% } %>

        <form action="/genre/add" method="POST">
            <label for="genre-name">Genre Name: </label>
            <input type="text" name="game_genre" id="game-genre" required>

            <!-- Add genre to already added Games -->
            
            <button type="submit">Submit this Game</button>
        </form>
    </body>
</html>
